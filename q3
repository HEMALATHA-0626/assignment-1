<body>
  <div class="gallery-box">
    <h2>My Design Portfolio</h2>
    <div class="gallery">
      <img src="https://picsum.photos/id/1015/300/200" alt="Design 1">
      <img src="https://picsum.photos/id/1016/300/200" alt="Design 2">
      <img src="https://picsum.photos/id/1019/300/200" alt="Design 3">
    </div>
    <img id="selectedImage" src="" alt="Selected Work">
    <br>
    <button id="animateBtn">Highlight Image</button>
  </div>

  <script>
    $(document).ready(function(){
      let selected = $("#selectedImage");

      // Click gallery image -> load into big preview
      $(".gallery img").click(function(){
        let src = $(this).attr("src");
        selected.stop(true,true).css({
          width: "150px",
          height: "100px",
          opacity: 0,
          display: "block"
        }).attr("src", src);
      });

      // Animate button -> fade in + grow
      $("#animateBtn").click(function(){
        if(selected.attr("src")){
          selected.animate({
            width: "300px",
            height: "200px",
            opacity: 1
          }, 1000); // 1 second smooth animation
        } else {
          alert("Please select an image from the gallery first!");
        }
      });
    });
  </script>
</body>
