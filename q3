      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .gallery-box {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.15);
      text-align: center;
    }
    h2 {
      margin-top: 0;
      color: #374151;
    }
    .gallery img {
      width: 150px;
      height: 100px;
      object-fit: cover;
      margin: 8px;
      border-radius: 10px;
      cursor: pointer;
      border: 2px solid transparent;
      transition: border 0.3s;
    }
    .gallery img:hover {
      border: 2px solid #2563eb;
    }
    #selectedImage {
      margin-top: 20px;
      display: none;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.25);
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
